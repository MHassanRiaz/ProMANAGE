<div class="container mt-4">

  <% if @tasks.any? %>
    <div class="card border-secondary shadow-sm">
      <div class="card-header bg-secondary text-white">
        <h4 class="card-title mb-0">Task List</h4>
      </div>
      <div class="card-body">
        <table class="table table-striped table-hover">
          <thead>
          <tr>
            <th>Title</th>
            <th>Project</th>
            <th>Due Date</th>
            <th>Assigned User</th>
          </tr>
          </thead>
          <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td>
                <%= link_to task.title, task_path(task), class: "text-decoration-none" %>
              </td>
              <td>
                <%= task.project.name if task.project %>
              </td>
              <td>
                <%= task.deadline.present? ? task.deadline.strftime('%B %d, %Y') : 'No deadline' %>
              </td>
              <td>
                <%= task.assigned_user.name if task.assigned_user %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="alert alert-info mt-4">
      No tasks available.
    </div>
  <% end %>

  <div class="mt-4">
    <%= link_to 'New Task', new_task_path, class: 'btn btn-primary btn-lg' %>
  </div>
</div>
