<!-- app/views/tasks/index.html.erb -->
<div class="container mt-4">
  <h1 class="mb-4">Tasks</h1>

  <!-- Button to create a new task -->
  <div class="mb-3">
    <%= link_to 'New Task', new_task_path, class: 'btn btn-primary btn-lg' %>
  </div>

  <table class="table table-striped table-hover">
    <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Time Spent</th>
      <th>Deadline</th>
      <th>Started At</th>
      <th>Ended At</th>
      <th>Task Type</th>
      <th>Project</th>
      <% if current_user.admin? %>
        <th>Assigned User</th>
      <% end %>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.time_spent %> <span class="text-muted">hours</span></td>
        <td><%= task.deadline.strftime('%Y-%m-%d %H:%M') %></td>
        <td><%= task.started_at.strftime('%Y-%m-%d %H:%M') %></td>
        <td><%= task.ended_at.strftime('%Y-%m-%d %H:%M') %></td>
        <td><%= task.task_type %></td>
        <td><%= task.project.name %></td>
        <% if current_user.admin? %>
          <td><%= task.user&.name %></td>
        <% end %>
        <td>
          <%= link_to 'Show', task, class: 'btn btn-info btn-sm me-1' %>
          <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-warning btn-sm me-1' %>
          <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
