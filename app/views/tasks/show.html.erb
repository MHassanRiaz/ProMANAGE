<!-- app/views/tasks/show.html.erb -->
<div class="container mt-4">
  <h1 class="mb-4">Task Details</h1>

  <div class="card">
    <div class="card-body">
      <dl class="row">
        <dt class="col-sm-3">Title:</dt>
        <dd class="col-sm-9"><%= @task.title %></dd>

        <dt class="col-sm-3">Description:</dt>
        <dd class="col-sm-9"><%= @task.description %></dd>

        <dt class="col-sm-3">Time Spent:</dt>
        <dd class="col-sm-9"><%= @task.time_spent %> <span class="text-muted">hours</span></dd>

        <dt class="col-sm-3">Deadline:</dt>
        <dd class="col-sm-9"><%= @task.deadline.strftime('%Y-%m-%d %H:%M') %></dd>

        <dt class="col-sm-3">Started At:</dt>
        <dd class="col-sm-9"><%= @task.started_at.strftime('%Y-%m-%d %H:%M') %></dd>

        <dt class="col-sm-3">Ended At:</dt>
        <dd class="col-sm-9"><%= @task.ended_at.strftime('%Y-%m-%d %H:%M') %></dd>

        <dt class="col-sm-3">Task Type:</dt>
        <dd class="col-sm-9"><%= @task.task_type %></dd>

        <dt class="col-sm-3">Project:</dt>
        <dd class="col-sm-9"><%= @task.project.name %></dd>

        <% if @task.user.present? %>
          <dt class="col-sm-3">Assigned User:</dt>
          <dd class="col-sm-9"><%= @task.user.name %></dd>
        <% end %>
      </dl>

      <%= link_to 'Back', tasks_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
