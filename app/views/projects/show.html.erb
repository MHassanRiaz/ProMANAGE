<!-- app/views/projects/show.html.erb -->
<style>
    .project-details {
        max-width: 800px;
        margin: 0 auto;
        padding: 1.5rem;
        background-color: #f8f9fa;
        border-radius: 0.3rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .project-details h1 {
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    .project-details p {
        font-size: 1.125rem;
        margin-bottom: 1.5rem;
    }

    .project-details .btn {
        margin-right: 0.5rem;
    }

    .project-details .btn:last-child {
        margin-right: 0;
    }
</style>

<div class="project-details">
  <h1><%= @project.name %></h1>
  <p><%= @project.description %></p>
  <div class="mt-3">
    <%= link_to 'Edit', edit_project_path(@project), class: "btn btn-warning me-2" %>
    <%= link_to 'Back', projects_path, class: "btn btn-secondary" %>
  </div>
</div>
