<br>
<div class="project-details p-4 bg-light border rounded">

  <!-- Title Center Alignment -->
  <div class="text-center mb-4">
    <h1><%= @project.name %></h1>
  </div>

  <%= form_with model: @project, local: true do |form| %>
    <fieldset disabled>
      <div class="row mb-4">
        <!-- Project Name -->
        <div class="col-md-6">
          <div class="mb-3">
            <%= form.label :name, "Project Name", class: "form-label" %>
            <%= form.text_field :name, class: "form-control", value: @project.name %>
          </div>
        </div>

        <!-- Client Name -->
        <div class="col-md-6">
          <div class="mb-3">
            <%= form.label :client_name, "Client Name", class: "form-label" %>
            <%= form.text_field :client_name, class: "form-control", value: @project.client_name %>
          </div>
        </div>
      </div>

      <div class="row mb-4">
        <!-- Project URL -->
        <div class="col-md-6">
          <div class="mb-3">
            <%= form.label :url, "Project URL", class: "form-label" %>
            <%= form.text_field :url, class: "form-control", value: @project.url %>
          </div>
        </div>

        <% if current_user.admin? %>
          <div class="col-md-6">
            <!-- Rate Per Hour -->
            <div class="mb-4 input-group">
              <%= form.label :rate_per_hour, "Rate per Hour", class: "form-label" %>
              <div class="input-group">
                <%= form.number_field :rate_per_hour, class: "form-control no-spinner", value: @project.rate_per_hour, step: 0.01, min: 0, aria: { describedby: "rate-per-hour-help" } %>
                <span class="input-group-text">$</span>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Technology Stack -->
      <div class="row mb-4">
        <div class="col-md-12">
          <% if @project.technology_stack.present? %>
            <div class="technology-stack mb-4">
              <h5>Technology Stack:</h5>
              <div class="d-flex flex-wrap">
                <% @project.technology_stack.split(',').each do |tech| %>
                  <span class="badge bg-secondary me-2 mb-2"><%= tech.strip %></span>
                <% end %>
              </div>
            </div>
          <% else %>
            <p class="text-muted">No technology stack specified.</p>
          <% end %>
        </div>
      </div>

      <!-- Project Description -->
      <div class="mb-4">
        <div class="mb-3">
          <%= form.label :description, "Project Description", class: "form-label" %>
          <%= form.text_area :description, class: "form-control", rows: 5, value: @project.description %>
        </div>
      </div>
    </fieldset>
  <% end %>

  <div class="row">
    <div class="col-md-8">
      <% if current_user.admin? %>
        <!-- Assigned Users -->
        <div class="mt-3">
          <div class="btn-group">
            <button type="button" class="btn btn-primary" data-bs-toggle="dropdown" aria-expanded="false">
              Assigned Users
            </button>
            <ul class="dropdown-menu">
              <% if @assigned_users.any? %>
                <% @assigned_users.each do |user| %>
                  <li>
                    <a class="dropdown-item" href="#">
                      <%= user.name %> (<%= user.email %>)
                    </a>
                  </li>
                <% end %>
              <% else %>
                <li>
                  <a class="dropdown-item" href="#">
                    No users are assigned to this project.
                  </a>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-md-4">
      <div class="mt-3 d-flex justify-content-end">
        <% if current_user.admin? %>
          <%= link_to 'Edit', edit_project_path(@project), class: "btn btn-warning me-2" %>
        <% end %>

        <%= link_to 'Back', root_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
<br>
