<!-- app/views/admin/users/switch.html.erb -->

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center">
          <h2>Switch User</h2>
        </div>
        <div class="card-body">
          <%= form_with url: switch_user_path, method: :post, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :user_id, "Select User", class: "form-label" %>
              <%= f.select :user_id, User.all.collect { |user| [user.name, user.id] }, {}, class: "form-select" %>
            </div>
            <div class="d-grid gap-2">
              <%= f.submit "Switch User", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
